<head>
    <meta charset="UTF-8">
    <title>Schedule Appointment</title>
    <link rel="stylesheet" href="../css/schedule.css">
</head>
<body>
    <div class="container">
        <h1>Schedule an Appointment</h1>
        <div class="details-container">
            <div class="property-details">
                <h2>{{propertyDetail.Property_Name}}</h2>
                <img src="../images/{{propertyDetail.Property_Image}}" alt="{{propertyDetail.Property_Name}}" width="300">
                <p>{{propertyDetail.Property_Description}}</p>
                <p>Price: S$ {{propertyDetail.Property_Price}}</p>
                <p>Square Footage: {{propertyDetail.Square_Footage}} sqft</p>
                <p>Bedrooms: {{propertyDetail.Property_Bedrooms}}</p>
                <p>Bathrooms: {{propertyDetail.Property_Bathrooms}}</p>
            </div>
            <div class="agent-details">
                <h2>Agent Information</h2>
                <img src="../images/{{agentDetail.agent_image}}" alt="{{agentDetail.agent_firstName}} {{agentDetail.agent_lastName}}" width="100">
                <p>Name: {{agentDetail.agent_firstName}} {{agentDetail.agent_lastName}}</p>
                <p>Email: {{agentDetail.agent_email}}</p>
                <p>Phone: +65 {{agentDetail.agent_phoneNumber}}</p>
            </div>
        </div>
        <form action="/schedule" method="POST" class="schedule-form">
            <input type="hidden" name="propertyId" value="{{propertyDetail.Property_ID}}">
            <input type="hidden" name="agentId" value="{{agentDetail.agent_id}}">
            <div class="form-group">
                <label for="appointmentDate">Appointment Date:</label>
                <input type="date" id="appointmentDate" name="appointmentDate" required>
            </div>
            <div class="form-group">
                <label for="appointmentTime">Appointment Time:</label>
                <input type="time" id="appointmentTime" name="appointmentTime" required>
            </div>
            <button type="submit" class="btn btn-primary">Schedule Appointment</button>
        </form>
    </div>
</body>
