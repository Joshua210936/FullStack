<!-- CSS !-->
<head>
<link rel="stylesheet" href="css/FeedbackForm.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"/>
<script src="js\feedbackForm.js" defer></script>
</head>
<br>
<div class="feedbackForm">
<form action="/user/login" method="post"></form>
    <div class="center-rating">
        <div class="rating-box">
            <header>How was your experience?</header>
            <div class="stars">
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
                <i class="fa-solid fa-star"></i>
            </div>
            <br>
            <p>Rating: <span id="current-rating">0</span>/5</p>
        </div>
    </div>
    <div class="row">
        <div class="col-6 col-md-4"></div>
        <div class="col-6 col-md-6"> <div class="container-fluid feedbackForm">
        <div class="form-group">
            <label for="inputGroupSelect01">What prompted you to visit our feedback form today?</label>
            <div class="input-group mb-3">
                <select class="custom-select" id="inputGroupSelect01" required>
                    <option selected>Choose...</option>
                    <option value="Report an issue">Report an issue</option>
                    <option value="Provide feedback">Provide feedback</option>
                    <option value="Other">Other</option>
                </select>
        </div>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" name="Description" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-6 col-md-6"></div>
    </div>
    </form>
    </div>
    <br>
</div>