<head>
    <link rel="stylesheet" href="css/Schedule.css">
    <script src="js/schedulepage.js" defer></script>
</head>

<div class="schedule-open-house-page">
  <div class="agent-and-calendar-container">
    <div class="agent-info">
      <img src="images/agent1.jpg" alt="Kwang Alan" class="agent-image">
      <div class="agent-details">
        <h3>Kwang Alan</h3>
        <p>ERA REALTY NETWORK PTE LTD</p>
      </div>
    </div>
    <div class="calendar-section">
      <form action="/schedule" method="POST" class="schedule-form">
        <!-- Hidden fields for agent_id and property_id -->
        <input type="hidden" id="agentId" name="agentId" value="1"> <!-- Replace with actual agent_id -->
        <input type="hidden" id="propertyId" name="propertyId" value="2"> 
        <input type="hidden" id="customerId" name="customerId" value="1">

        <div class="form-group">
          <label for="appointmentDate">Select Date:</label>
          <input type="date" id="appointmentDate" name="appointmentDate" required>
        </div>
        <div class="form-group">
          <label for="appointmentTime">Select Time:</label>
          <select id="appointmentTime" name="appointmentTime" required>
            <option value="09:00">09:00 AM</option>
            <option value="10:00">10:00 AM</option>
            <option value="11:00">11:00 AM</option>
            <option value="12:00">12:00 PM</option>
          </select>
        </div>
        <button type="submit" class="confirm-button">Confirm Appointment</button>
      </form>
    </div>
  </div>
</div>
