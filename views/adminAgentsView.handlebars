<head>
    <title>Admin Agents View</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/adminAgentView.css">
    <script src="/js/adminAgentView.js" defer></script>
    <style>
        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 60px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="tabbed-groups">
        <h1 class="text-center">Agents</h1>
        <div class="search">
            <span class="search-icon material-symbols-outlined">search</span>
            <input class="search-input" type="search" placeholder="Search Agent">
            <button class="filter-icon"><span class="material-symbols-outlined">tune</span></button>
        </div>
        <div class="tab">
            <button class="tablinks" onclick="openTab(event, 'unapproved')">Unapproved Agents</button>
            <button class="tablinks" onclick="openTab(event, 'approved')">Approved Agents</button>
        </div>

        <div id="unapproved" class="tabcontent">
            <!-- Content for Unapproved Agents tab -->
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="unapprovedAgentsTable">
                    <!-- Unapproved agents will be populated here -->
                </tbody>
            </table>
        </div>

        <div id="approved" class="tabcontent">
            <!-- Content for Approved Agents tab -->
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="approvedAgentsTable">
                    <!-- Approved agents will be populated here -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal for Agent Profile -->
    <div id="agentModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Agent Profile</h2>
            <div id="agentProfileContent">
                <!-- Agent details will be populated here -->
            </div>
        </div>
    </div>
</body>